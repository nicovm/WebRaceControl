@using RaceControl.Models
@model IEnumerable<RaceControl.Models.Usuario>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            <img src="~/Content/Img/img_usuario48.png" />
            Operadores
        </h1>
    </div>
</div>


<div class="form-group">

    <button id="btnNuevoCategoria" type="button" class="btn btn-primary"
            data-toggle="modal" data-target="#myModal"
            onclick="location.href='@Url.Action("register", "Account", Model)'">

        Nuevo Operador
    </button>

</div>



    <div class="table-responsive">

        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AspNetUsers.Email)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
                    </td>
                    <td align="center">
                        <button id="btnEditarCarrera" type="button" class="btn btn-info"
                                data-toggle="modal" data-target="#modalNvoCarrera" 
                               onclick="location.href='@Url.Action("EditOperador", "Account", new { idUsuario = item.idUsuario})'">

                            Editar
                        </button>
                    </td>
                </tr>


            }

        </table>


    </div>


