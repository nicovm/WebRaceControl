@model WebRaceControl.Models.Torneo

@{

    string accion;
    if (Model == null)
    {
        ViewBag.Title = "Nuevo Torneo";
        accion = "Create";
    }
    else
    {
        ViewBag.Title = "Editar Torneo";
        accion = "Edit";
    }
}



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">@ViewBag.Title</h4>
</div>


@using (Html.BeginForm(accion, "Torneo", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">

        <div class="form-horizontal">
           
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.nombre,"Nombre", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.nombre)
                </div>

            </div>

           
            <div class="form-group">

                <label for="file" class="control-label col-md-2">Logo:</label>
                <div class="col-md-10">
                    <input type="file" name="file" id="file" style="width: 100%;" />
                </div>

            </div>

       

        </div>

    </div>
    
     <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
    
}



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
