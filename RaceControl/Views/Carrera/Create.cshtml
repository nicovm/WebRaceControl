@model RaceControl.Models.Carrera

@{
    Layout = null;
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Nueva Fecha</h4>
</div>

<div class="modal-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h3>Nombre</h3>
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>

            
            <div class="input-group date">
                <input type="text" id="fecha1" class="form-control"><span class="input-group-addon" id="icon"><i class="glyphicon glyphicon-th"></i></span>
            </div>

            <div class="form-group">
                <h3>Torneo</h3>

                <input id="disableInput" class="form-control" placeholder="@ViewBag.torneo.nombre" disabled="" type="text">
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    }


</div>

<style>
     .datepicker {
        z-index: 1151 !important;
    }
</style>





