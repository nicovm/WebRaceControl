
@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th><h4>DNI</h4></th>
                <th><h4>Nombre</h4></th>
                <th><h4>Apellido</h4></th>
                <th><h4></h4></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in ViewBag.CatPiloto)
            {
                <tr>
                    <td class="col-sm-3">
                        <h4>@item.Piloto.dni</h4>
                    </td>
                    <td class="col-sm-4">
                        <h4> @item.Piloto.nombre </h4>
                    </td>
                    <td class="col-sm-4">
                        <h4> @item.Piloto.apellido </h4>
                    </td>
                    <td align="center" class="col-sm-1">
                        <button id="btnSelectCategoria" type="button" class="btn btn-info"
                                onclick="location.href='@Url.Action("Tecnica", "Carrera", new { idCarrera = ViewBag.idCarrera , idCategoria = item.idCategoria, dniPiloto = item.Piloto.dni })'">
                            Seleccionar
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

